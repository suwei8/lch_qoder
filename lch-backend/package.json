    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/typeorm": "^10.0.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "ioredis": "^5.3.2",
    "moment": "^2.29.4",
    "mysql2": "^3.6.5",
    "passport": "^0.7.0",
