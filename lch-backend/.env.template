# 后端服务环境配置模板
# 复制此文件为 .env 并填写实际值以在本地运行

# 环境标识
NODE_ENV=development

# 服务器配置
PORT=5603

# 数据库配置 - 本机MySQL
DATABASE_HOST=127.0.0.1
DATABASE_PORT=3306
DATABASE_USERNAME=your_database_username
DATABASE_PASSWORD=your_database_password
DATABASE_NAME=lch_v4
DATABASE_ECHO=true

# Redis 配置 - 本机Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT 配置
JWT_SECRET=your_jwt_secret_key_here

# 微信配置 (开发环境)
WECHAT_APPID=your_wechat_app_id
WECHAT_SECRET=your_wechat_secret

# 微信支付配置 (开发环境)
WECHAT_PAY_MCH_ID=your_mch_id
WECHAT_PAY_API_KEY=your_pay_api_key
WECHAT_PAY_NOTIFY_URL=http://localhost:5603/api/payments/wechat/notify

# 智链物联设备配置
ZL_API_URL=https://cloud.hbzhilian.com/AC/Cmd
ZL_APP_ID=your_zl_app_id
ZL_SECRET=your_zl_secret

# 短信服务配置
SMS_ACCESS_KEY=your_sms_access_key
SMS_SECRET_KEY=your_sms_secret_key
SMS_SIGN_NAME=your_sms_sign_name
SMS_TEMPLATE_CODE=your_sms_template_code

# 日志配置
LOG_LEVEL=debug
LOG_FILE_PATH=./logs